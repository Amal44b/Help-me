<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <TextView
                android:id="@+id/tex1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Employee Number:"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_toLeftOf="@id/edi1"
                android:layout_alignTop="@id/edi1" />

            <EditText
                android:id="@+id/edi1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Please Enter your Employee ID"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_above="@id/edi2"
                android:layout_centerInParent="true"/>


            <TextView
                android:id="@+id/tex2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password:"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_toLeftOf="@+id/edi2"
                android:layout_centerInParent="true"/>

            <EditText
                android:id="@+id/edi2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Please Enter your Password"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                 />




        <Button
            android:id="@+id/log1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edi2"
            android:layout_centerInParent="true"
            android:onClick="log"
            android:text="Log in"
            android:textSize="12dp"
            android:textStyle="bold" />



    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>