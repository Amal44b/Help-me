<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
            <TextView
                android:id="@+id/tex3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Academic|Employee ID:"
                android:textStyle="bold"
                android:layout_toLeftOf="@+id/edi3"
                android:layout_alignTop="@+id/edi3"/>

            <EditText
                android:id="@+id/edi3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint=" Enter Academic|Employee ID"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_above="@+id/edi4"
                android:layout_centerInParent="true"/>


            <TextView
                android:id="@+id/tex4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password:"
                android:textStyle="bold"
                android:layout_toLeftOf="@+id/edi4"
                android:layout_centerInParent="true"/>

            <EditText
                android:id="@+id/edi4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint=" Enter your Password"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                />




        <Button
            android:id="@+id/log2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="log"
            android:text="Log in"
            android:textStyle="bold"
            android:layout_below="@+id/edi4"
            android:layout_centerInParent="true"/>


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>