<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tex6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/text7"
                android:layout_centerInParent="true"
                android:text="Welcome To HELP ME"
                android:textSize="20dp"
                android:textStyle="bold"
                />



        <TextView
            android:id="@+id/text7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose one option:"
            android:layout_centerInParent="true"
            android:textSize="20dp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/log3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trainee or Coach"
            android:textSize="12dp"
            android:textStyle="bold"
            android:onClick="TraineeorCoach"
            android:layout_below="@+id/text7"
            android:layout_centerInParent="true"
            />
        <Button
            android:id="@+id/log4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The doctors"
            android:onClick="Thedoctors"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_below="@+id/log3"
            android:layout_centerInParent="true"

            />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/log4"
                android:layout_centerInParent="true"
                android:text="Vistors"
                android:onClick="Vistor"/>
        </RelativeLayout>





</androidx.constraintlayout.widget.ConstraintLayout>